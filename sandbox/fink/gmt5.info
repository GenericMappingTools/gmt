Version: 5.0.1b
Revision: 0
Source: ftp://ftp.soest.hawaii.edu/gmt5/GMT-%v_r12404-src.tar.bz2
Source-MD5: ad03e1ad676e8aacc5dac0ba3070d6bb
Conflicts: gmt
BuildDepends: cmake, netcdf-c7, libpcre1, gdal
Depends: netcdf-c7-shlibs, %n-shlibs (= %v-%r), libpcre1-shlibs, gdal-shlibs, gshhg (>= 2.2.4), dcw-gmt
Recommends: %n-doc
NoSetCPPFLAGS: true
NoSetLDFLAGS: true

# don't build xgrid to avoid x11 dependency.
# don't build mex (won't work unless matlab or octave is installed).

CompileScript: <<
  #!/bin/sh -ev
  mkdir build
  cd build
  cmake \
	-DCMAKE_C_FLAGS_RELEASE="-O3 -DNDEBUG -fstrict-aliasing" \
	-DCMAKE_INSTALL_PREFIX=%p \
	-DNETCDF_ROOT=%p \
	-DGSHHG_ROOT=%p \
	-DDCW_ROOT=%p \
	-DFFTW3_ROOT=off \
	-DGDAL_ROOT=off \
	-DPCRE_ROOT=off \
	-DXGRID=off \
	-DFLOCK=on \
	-DGMT_INSTALL_MONOLITHIC=off \
	-DGMT_INSTALL_NAME_SUFFIX=5 \
	-DGMT_SOURCE_CODE_CONTROL_VERSION_STRING=%v-%r \
	-DLICENSE_RESTRICTED=LGPL \
	-DCMAKE_OSX_DEPLOYMENT_TARGET="" \
        -DCMAKE_OSX_SYSROOT=/ \
	..
  make
<<
InstallScript: <<
  #!/bin/sh -ev
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=%i -P cmake_install.cmake
<<
SplitOff: <<
  Package: %N-doc
  Conflicts: gmt-doc
  BuildDependsOnly: True
  Files: share/doc/gmt5
