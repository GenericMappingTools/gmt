-143.78 27.5
-147 24.2
-151.2 16.5
-153.02 11
-154.28 5.5
-154.98 0
-154.63 -5.5
-154 -11
-152.32 -16.5
-150.36 -22
-147 -26.95
-141.4 -33
-133 -38.5
-126 -41.58
-119 -43.01
-112 -44
-105 -44.33
-98 -43.78
-91 -42.35
-84 -40.37
-80.78 -38.5
-77 -35.75
-73.5 -33
-71.96 -30.8
-68.04 -41.8
> M
-37.8 -41.8
-23.8 -41.8
-23.8 27.39
5.04 -41.8
19.46 -41.8
49 27.39
49 -41.8
62.58 -41.8
62.58 40.48
42 40.48
12.46 -29.7
-17.22 40.48
-37.8 40.48
> T
124.46 -41.8
124.46 30.47
160.02 30.47
160.02 40.48
74.34 40.48
74.34 30.47
110.32 30.47
110.32 -41.8
EOF
echo "grestore"
echo "% End of GMT Graphics logo"
rm -rf $GMT_TMPDIR
unset GMT_TMPDIR
exit 0
